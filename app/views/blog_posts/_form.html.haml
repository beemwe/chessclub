= simple_form_for @blog_post, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.full_error :permalink
  = f.input :published_at, :as => :date_picker
  = f.input :content
  = f.input :permalink, :as => :hidden
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t('helpers.links.cancel')), blog_posts_path, :class => 'btn'
