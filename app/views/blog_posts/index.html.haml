- model_class = BlogPost
.page-header
  %h1=t '.title', :default => model_class.model_name.human
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:published_at)
      %th= model_class.human_attribute_name(:author_id)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @blog_posts.each do |blogpost|
      %tr
        %td= link_to blogpost.title, blog_post_path(blogpost)
        %td= l blogpost.published_at unless blogpost.published_at.blank?
        %td= blogpost.author.first_last_name
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), 'editor' + blog_post_path(blogpost), :class => 'btn btn-mini'
          = link_to t('.publish'), publish_blog_post_path(blogpost), :class => 'btn btn-mini' if blogpost.published_at.blank? && (current_user.role?(:administrator) || (current_user.role?(:author) && blogpost.author_id != current_user.id))
          = link_to t('.destroy', :default => t("helpers.links.destroy")), blog_post_path(blogpost), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), 'editor' + new_blog_post_path, :class => 'btn btn-primary'
