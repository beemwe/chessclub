- model_class = Blog
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:published_at)
      %th= model_class.human_attribute_name(:author_id)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @blogs.each do |blog|
      %tr
        %td= link_to blog.title, blog_path(blog)
        %td= l blog.published_at unless blog.published_at.blank?
        %td= User.find(blog.author_id).first_last_name
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_blog_path(blog), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), blog_path(blog), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_blog_path, :class => 'btn btn-primary'
