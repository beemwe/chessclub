- model_class = Club
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th Vereinsname
      %th{:style => 'width:15%'} ZPS
      %th{:style => 'width:15%'} Aktionen
  %tbody
    - @clubs.each do |club|
      %tr
        %td
          %strong= link_to club.name, edit_club_path(club)
        %td.numeric= club.zps
        %td
          = link_to t('.destroy', :default => t("helpers.links.destroy")), club_path(club), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_club_path, :class => 'btn btn-primary'
