%ul#login-area.nav.pull-right
  %li.dropdown
    = link_to "#{current_user.first_last_name}<b class=\"caret\"></b>".html_safe, '#', {:class => 'dropdown-toggle', 'data-toggle' => 'dropdown'}
    %ul.dropdown-menu
      %li= link_to 'Meine Daten bearbeiten', edit_user_registration_path
      %li= link_to "Abmelden", logout_path, :method => :delete if current_user.present?
      %li.divider
      %li= link_to "Benutzerverwaltung", users_path if can?(:manage, User)
      %li= link_to "Ligaverwaltung", leagues_path if can?(:manage, League)
      %li= link_to "Blogverwaltung", blog_posts_path if can?(:manage, BlogPost)
