.page-header
  %h1= "Termine und Veranstaltungen"

%div
  %div#calendar
= render :partial => 'show_event_dialog'
%div#create_event_dialog{:style => 'display:none;'}
  %div#create_event
%div#edit_event_dialog{:style => 'display:none;'}
%div#event_type_selector{:style => 'display:none;'}
  = simple_form_for 'event', :method => :delete, :html => { :class => 'form-horizontal' }, :remote => true do |f|
    = f.input :event_selection, :as => :radio_buttons, :label => 'Auswahl', :collection => [['Nur diesen Event', 'this'], ['Alle zukünftigen Events (excl. diesem)', 'future'], ['Gesamte Event-Serie', 'true'] ]
    %br
    %br
    = f.button :submit, 'Auswahl Löschen', :class => 'btn btn-danger'
%div#ajax-loader{:style => 'position:absolute; top: 50%; left:50%; display:none;'}
  = image_tag 'ajax-loader.gif'
