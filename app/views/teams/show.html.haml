- model_class = Team
.page-header
  %h1=t '.title', :team => @team.name, :league => @team.league
  %h2= "in der Saison #{@team.season}"

%p
  %strong= model_class.human_attribute_name(:board_count) + ':'
  %br
  = @team.board_count
%p
  %strong= model_class.human_attribute_name(:subs_bench) + ':'
  %br
  = @team.subs_bench

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), teams_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_team_path(@team), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), team_path(@team), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
