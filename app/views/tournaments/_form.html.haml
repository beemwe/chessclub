= simple_form_for @tournament, :html => { :class => 'form-horizontal' } do |f|
  = f.input :title
  = f.input :modus, :as => :select, :collection => Tournament::MODI
  = f.input :rounds, :as => :integer
  = f.input :referee
  .form-actions
    = f.button :submit, :class => 'btn btn-primary'
    = link_to t('helpers.submit.cancel'), :back, :class => 'btn'
