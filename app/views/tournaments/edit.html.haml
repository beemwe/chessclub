- model_class = Tournament

- if @tournament.state == 'in_preparation'
  .page-header
    %h1=t '.title', :default => t('helpers.title.edit', :model => model_class.model_name.human, :default => "Edit #{model_class.model_name.human}")
  = render :partial => "form"
- elsif @tournament.state == 'running'
  .page-header
    %h1= @tournament.title
  = render partial: 'result_editor'