- model_class = Tournament
.page-header
  %h1=t '.title', :default => model_class.model_name.human(:count => 2)
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:modus)
      %th= model_class.human_attribute_name(:rounds)
      %th= model_class.human_attribute_name(:state)
      %th= model_class.human_attribute_name(:referee)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @tournaments.each do |tournament|
      %tr
        %td
          %strong= link_to tournament.title, tournament_path(tournament)
        %td= tournament.modus
        %td= tournament.rounds
        %td= tournament.state_name
        %td= tournament.referee
        %td=l tournament.created_at, :format => :short
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_tournament_path(tournament), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), tournament_path(tournament), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_tournament_path, :class => 'btn btn-primary'
