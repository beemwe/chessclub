- model_class = Tournament
.page-header
  %h1= @tournament.title

%p
  %strong= model_class.human_attribute_name(:modus) + ':'
  %br
  = @tournament.modus
%p
  %strong= model_class.human_attribute_name(:rounds) + ':'
  %br
  = @tournament.rounds
%p
  %strong= model_class.human_attribute_name(:state) + ':'
  %br
  = @tournament.state
%p
  %strong= model_class.human_attribute_name(:referee) + ':'
  %br
  = @tournament.referee

.form-actions
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_tournament_path(@tournament), :class => 'btn' if can? :edit, @tournament
  = link_to 'Turnier starten', start_tournament_path(@tournament), :class => 'btn' if can? :edit, @tournament
  = link_to t('.destroy', :default => t("helpers.links.destroy")), tournament_path(@tournament), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger' if can? :delete, @tournament
