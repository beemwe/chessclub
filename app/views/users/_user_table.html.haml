- model_class = User
%thead
  %tr
    %th= model_class.human_attribute_name(:full_name)
    %th= model_class.human_attribute_name(:email)
    %th= model_class.human_attribute_name(:sign_in_count)
    %th= model_class.human_attribute_name(:dwz)
    %th= model_class.human_attribute_name(:dsb_id)
    %th=t '.actions', :default => t("helpers.actions")
%tbody
  - users.each do |user|
    %tr
      %td= link_to "#{user.last_name}, #{user.first_name}", user_path(user)
      %td= user.email
      %td= user.sign_in_count
      %td= user.dwz == 0 ? 'noch kein Wert vorhanden' : user.dwz unless user.dwz.blank?
      %td= user.dsb_id
      %td
        = link_to t('.edit', :default => t("helpers.links.edit")), edit_user_path(user), :class => 'btn btn-mini'
        = link_to t('.destroy', :default => t("helpers.links.destroy")), user_path(user), :method => :delete, :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-mini btn-danger'
